{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@adapters/*": [
        "src/adapters/*"
      ],
      "@application/*": [
        "src/application/*"
      ],
      "@config/*": [
        "src/infra/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@ports/*": [
        "src/ports/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "commitlint.config.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}